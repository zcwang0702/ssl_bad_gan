{
    "name": "cifar10-ssl-bad-gan",
    "n_gpu": 1,

    "model": {
        "type": "cifar10",
        "noise_size": 100,
        "num_label": 10,
        "larger_gen": false,
        "output_params": true,
        "image_size": 3072

    },
    "data_loader": {
        "type": "CIFAR10",
        "args":{
            "size_labeled_data": 4000,
            "train_batch_size": 100,
            "dev_batch_size": 200,
            "num_workers": 8,
            "drop_last": true
        }
    },
    "optimizer": {
        "type": {
            "dis": "Adam",
            "gen": "Adam",
            "enc": "Adam"
},
        "args":{
            "dis": {
                "lr": 6e-4,
                "betas": [0.5, 0.999]
            },
            "gen": {
                "lr": 3e-4,
                "betas": [0.0, 0.999]
            },
            "enc": {
                "lr": 3e-4,
                "betas": [0.0, 0.999]
            },
            "min_lr": 0
        }
    },
    "losses": [
        "d_criterion", "gaussian_nll", "log_sum_exp", "entropy"
    ],
    "metrics": [
        "eval_true_fake", "eval_classification"
    ],
    "scheduler": {
        "type": "LambdaLR",
        "args": {}
    },
    "trainer": {
        "max_epochs": 1200,
        "save_dir": "../experiment/checkpoint",
        "save_period": 30,
        "val_period": 1,
        "vis_period": 1,
        "log_display_period": 30,
        "log_write_iteration": 30,
        "verbosity": 2,

        "vi_weight": 1e-2,

        "monitor": "min val_error_rate",
        "early_stop": 1200,
        "log_step_ratio": 1,

        "tensorboardX": true,
        "log_dir": "../experiment/log"
    }
}
